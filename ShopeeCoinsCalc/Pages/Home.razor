@page "/"

@using System.Text.RegularExpressions
@using ShopeeCoinsCalc.Models
@using ShopeeCoinsCalc.Components

<PageTitle>Shopee Coins Calculator</PageTitle>
<style>
	body {
		background-color: lightgoldenrodyellow;
	}
</style>
<div style="display: flex; height: 90vh;">
	<div style="flex: 1; display: flex; flex-direction: column;">
		<h1>1. 蝦幣紀錄貼到這裡</h1>
		<textarea @bind="_viewModel.InputText" style="flex: 1; resize: none; "></textarea>
		<br />
		<h1>2. 按下計算</h1>
		<button class="btn-info" @onclick="Count">計算</button>
	</div>
</div>

<Result ShowResult="_viewModel.ShowResult"
ViewModel="_viewModel"/>

@code{

	[Inject]
	private ResultViewModel _viewModel { get; set; }

	private void Count()
	{
		_viewModel.Count();
	}
}